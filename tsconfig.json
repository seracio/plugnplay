{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "outDir": "build",
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["es2020", "dom"],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": false
    },
    "exclude": ["node_modules", "dist"]
}
