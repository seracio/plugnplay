{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "sourceMap": true,
        "jsx": "react-jsx",
        "jsxFactory": "",
        "jsxFragmentFactory": "",
        "moduleResolution": "node",
        "rootDir": "src",
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": false
    },
    "exclude": ["node_modules", "dist"]
}
